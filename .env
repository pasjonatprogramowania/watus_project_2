# Konfiguracja LLM (backend)
LLM_HTTP_URL=http://127.0.0.1:1234/v1/chat/completions
HTTP_TIMEOUT=15.0

# Konfiguracja Audio
ASR_MIN_DBFS=-45
WAKE_WORDS=watus,watusiu,ej
# TTS_PROVIDER: piper | gemini | xtts
TTS_PROVIDER=piper
# GEMINI_API_KEY=... (wypełnij jeśli używasz gemini)
STT_PROVIDER=local

# Konfiguracja XTTS
XTTS_SPEAKER_WAV=models/xtts/ref.wav
XTTS_LANGUAGE=pl

# Wybór modelu Whisper (odkomentuj wybrany)
# Konfiguracja Whisper (uproszczona)
# Rozmiar modelu: small, medium, large-v3
WHISPER_SIZE=medium

# Typ urządzenia: cpu, gpu
WHISPER_DEVICE_TYPE=cpu

# Ścieżki
# PIPER_BIN=c:\Users\pawel\piper\piper.exe (nieużywane przy Python API)
PIPER_MODEL_PATH=models/piper/pl_PL-gosia-medium.onnx
PIPER_CONFIG=models/piper/pl_PL-gosia-medium.onnx.json
PIPER_SR=22050

# Inne
CAMERA_JSONL=camera.jsonl
SCENARIO_ACTIVE_PATH=scenarios_text/active.json
MELD_FILE=meldunki.jsonl
RESP_FILE=responses.jsonl
DIALOG_PATH=dialog.jsonl

# ZMQ
PUB_ADDR=tcp://127.0.0.1:7780
SUB_ADDR=tcp://127.0.0.1:7781
